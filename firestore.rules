rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /locations/{userId} {

      // Allow authenticated users to read their own documents
      allow read: if request.auth != null && request.auth.uid == userId;

      // Allow admins to read and write any document in the locations collection
      allow write: if request.auth.token.role == 'admin';

      // Allow non-admin users to write only their own document
      allow write: if request.auth != null && request.auth.uid == userId && request.auth.token.role == 'user';
    }
  }
}
